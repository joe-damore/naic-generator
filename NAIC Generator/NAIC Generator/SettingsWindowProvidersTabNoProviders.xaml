<UserControl x:Class="naic.SettingsWindowProvidersTabNoProviders"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:naic"
             mc:Ignorable="d" 
             d:DesignHeight="300"
             d:DesignWidth="300">
    <Grid>
        <Grid Width="200" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,50">
            <TextBlock FontWeight="Bold" Margin="10,10,10,0" TextWrapping="Wrap" Text="No providers found." VerticalAlignment="Top" HorizontalAlignment="Center"/>
            <TextBlock Margin="10,33,10,0" TextWrapping="Wrap" Text="You can add providers by right-clicking in the list box to the left, or by using the button below." TextAlignment="Justify" VerticalAlignment="Top"/>
            <Button x:Name="btnAddNewProvider" Content="Add New Provider" VerticalAlignment="Top" Margin="41,119,41,0" Height="22" Click="ClickAddNewProvider"/>
        </Grid>
    </Grid>
</UserControl>
